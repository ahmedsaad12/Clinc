<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-70dp"
        android:background="@drawable/home_back">

        <ImageView
            android:id="@+id/image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="16dp"
            android:clickable="false"
            android:longClickable="false"
            android:src="@drawable/noti_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
             />

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@+id/image"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toTopOf="@+id/fl"
       app:layout_constraintVertical_bias=".4"
       android:layout_marginTop="160dp"
       android:layout_marginStart="25dp"
       android:layout_marginEnd="25dp"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           
           android:orientation="vertical">
           <ImageView
               android:id="@+id/imageSystem"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:layout_gravity="center"
               android:src="@drawable/clinic"
               android:scaleType="fitXY"
         />
           <ImageView
               android:id="@+id/imageBook"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:layout_gravity="center"
               android:layout_marginTop="2dp"
               android:src="@drawable/appiontments"
               android:scaleType="fitXY"
               />
           <ImageView
               android:id="@+id/imageInstr"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:layout_gravity="center"
               android:src="@drawable/instructions"
               android:scaleType="fitXY"
               android:layout_marginTop="2dp"

               />
           <ImageView
               android:id="@+id/imageprofile"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:layout_gravity="center"
               android:src="@drawable/profile"
               android:scaleType="fitXY"
               android:layout_marginTop="2dp"

               />
           <ImageView
               android:id="@+id/imagechat"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:layout_gravity="center"
               android:src="@drawable/askdoctor"
               android:layout_marginTop="2dp"

               android:scaleType="fitXY"
           />
       </LinearLayout>
   </FrameLayout>
        <FrameLayout
            android:id="@+id/fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/llLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"


        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/address"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:clickable="false"
            android:longClickable="false"
            android:text="ميدان الحصرى - مول الامريكيه 5 - الدور الثالث بجوارمعمل الحياه"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/mobile"
            />

       <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:clickable="false"
        android:longClickable="false"
        android:text="01111148585"
        android:textColor="@color/white"
        android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
